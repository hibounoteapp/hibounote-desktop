{
  "name": "hibounote",
  "productName":"hibounote",
  "version": "1.0.0",
  "main": "main.js",
  "author": "hibounoteapp <hibounoteapp@gmail.com>",
  "description": "A free alternative to organize your projects into visual boards.",
  "scripts": {
    "ng": "ng",
    "start": "ng build && electron .",
    "build": "electron-builder",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "build": {
    "appId": "com.hibounoteapp.hibounote-desktop",
    "win": {
      "target":[
        "nsis"
      ],
      "icon":"icon.ico"
    },
    "mac": {
      "icon":"icon.icns"
    },
    "linux": {
      "target":"AppImage"
    },
    "nsis":{
      "oneClick":false,
      "installerIcon":"icon.ico",
      "uninstallerIcon":"icon.ico",
      "uninstallDisplayName":"hibounote-uninstaller",
      "license":"LICENSE",
      "allowToChangeInstallationDirectory":true
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/cdk": "^17.3.10",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/elements": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/material": "^17.3.10",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@electron/packager": "^18.3.3",
    "@jsplumb/browser-ui": "^6.2.10",
    "@panzoom/panzoom": "^4.5.1",
    "custom-element-register": "^1.0.10",
    "electron-updater": "^6.2.1",
    "jquery": "^3.7.1",
    "ngx-cookie-service": "^18.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.1",
    "@angular/cli": "^18.0.1",
    "@angular/compiler-cli": "^18.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/jquery": "^3.5.30",
    "autoprefixer": "^10.4.19",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "nx-electron": "^18.0.1",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.4.2"
  }
}
